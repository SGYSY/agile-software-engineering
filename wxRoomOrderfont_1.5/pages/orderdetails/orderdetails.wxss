.orderdetails {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  padding-top: 4vw;
  position: relative;
}
.orderdetails .orderdetailscontant {
  width: 90vw;
  height: auto;
  border-radius: 5vw;
  background-color: #fff;
  position: relative;
  color: #472634;
  padding: 3vw 3vw;
  margin-bottom: 5vw;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.orderdetails .orderdetailscontant .status {
  /* position: absolute; */
  top: 1.5vw;
  right: 5vw;
  font-size: 18vw;
}
.orderdetails .orderdetailscontant .icon-weitongguo {
  color: #ff1e44;
}
.orderdetails .orderdetailscontant .icon-yitongguo {
  color: #39b944;
}
.orderdetails .orderdetailscontant .icon-daishenhe {
  color: #f5aa47;
}

.orderdetails .orderdetailscontant view {
  font-size: 4.5vw;
  min-height: 6.5vw;
  margin-bottom: 4vw;
  height: auto;
  display: flex;
}
.orderdetails .orderdetailscontant > view {
  width: 95%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.orderdetails .orderdetailscontant view text {
  margin: 0 2vw 0 1vw;
}

.orderdetails .orderdetailscontant view .u {
  flex: 1;
  margin-left: 3vw;
}
.orderdetails .orderdetailscontant #btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  filter: blur(0.2vw);
}

.action {
  height: 24vh;
  display: flex;
  justify-content: space-around;
}
.action button{
  height: 8vh;
  width: 30vw;
  margin: 10rpx;
  background-color: #4169E1;
  border-radius: 3vw;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}
.action button text{
  color: #ffffff;
  font-size: 20px;
}

