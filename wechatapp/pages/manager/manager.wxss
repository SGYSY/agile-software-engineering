/* 页面整体容器：使用flex布局，让底部按钮可以居中 */
.container {
    background-color: #f4f6f9;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  
  /* 统计信息卡片（顶部） */
  .stats-card {
    width: 90%;
    background-color: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    margin: 40rpx auto 0 auto; /* 顶部留白 + 水平居中 */
    padding: 40rpx 30rpx;
  }
  
  .stats-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  /* 统计信息列表 */
  .stats-list {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }
  
  .stats-item {
    display: flex;
    justify-content: space-between;
  }
  
  .stats-label {
    font-size: 24rpx;
    color: #666;
  }
  
  .stats-value {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
  }
  
  /* 用于占据剩余空间，让按钮可居中 */
  .content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  /* 功能按钮组：垂直排列 */
  .button-group {
    display: flex;
    flex-direction: column;
    gap: 30rpx; /* 按钮之间的间距 */
    width: 80%;
  }
  
  /* 主按钮样式 */
  .btn-primary {
    background-color: #3498db; /* 可替换成喜欢的颜色 */
    color: #fff;
    font-size: 28rpx;
    font-weight: bold;
    padding: 20rpx;
    border: none;
    border-radius: 80rpx;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
    text-align: center;
  }
  
  .btn-primary:active {
    opacity: 0.8;
  }
  