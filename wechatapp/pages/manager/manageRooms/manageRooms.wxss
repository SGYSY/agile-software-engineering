/* 页面背景、整体容器 */
page, .container {
    background-color: #f8f8f8;
    min-height: 100vh; /* 保证全屏背景 */
  }
  
  .container {
    padding: 20px;
  }
  
  /* 自习室列表容器（可滚动） */
  .room-list {
    height: 600px; /* 根据需求自定义高度 */
    margin-bottom: 20px;
    border: 1px solid #ddd;
    border-radius: 6px;
    background-color: #ffffff;
  }
  
  /* 每个自习室卡片 */
  .room-card {
    padding: 15px;
    border-bottom: 1px solid #eee;
  }
  .room-card:last-child {
    border-bottom: none;
  }
  
  .room-info {
    margin-bottom: 10px;
  }
  
  .info-item {
    display: block;
    font-size: 16px;
    margin-bottom: 5px;
  }
  
  /* 按钮组 */
  .action-buttons {
    display: flex;
    justify-content: flex-end;
  }
  
  .btn-edit {
    background-color: #007bff;
    color: #fff;
    padding: 8px 12px;
    margin-right: 10px;
    border: none;
    border-radius: 4px;
  }
  
  .btn-delete {
    background-color: #dc3545;
    color: #fff;
    padding: 8px 12px;
    border: none;
    border-radius: 4px;
  }
  
  /* 新增按钮 */
  .btn-add {
    background-color: #28a745;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 4px;
    width: 100%;
    font-size: 16px;
    margin-bottom: 100px;
  }
  
  /* 弹窗遮罩层 */
  .modal-overlay {
    position: fixed;  /* 绝对覆盖屏幕 */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5); /* 半透明黑色背景 */
    z-index: 999;    /* 确保在最上层 */
  }
  
  /* 弹窗内容容器：置于页面上方 */
  .modal-content {
    position: relative;
    background-color: #fff;
    width: 80%;
    max-width: 600rpx; /* 小程序中常用 rpx 或 px */
    margin: 200px auto 0; /* 顶部留出一定距离，auto水平方向居中 */
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
  }
  
  /* 表单标题 */
  .form-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  /* 表单输入框 */
  input {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  /* 开关组件 */
  .switch-group {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .switch-group text {
    margin-right: 10px;
    font-size: 16px;
  }
  
  /* 提交按钮 */
  .btn-submit {
    background-color: #007bff;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 4px;
    width: 100%;
  }
  
  /* 关闭弹窗按钮 */
  .btn-close {
    background-color: #6c757d;
    color: #fff;
    margin-top: 10px;
    padding: 10px;
    border: none;
    border-radius: 4px;
    width: 100%;
  }
  